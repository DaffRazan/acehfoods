<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#fbe6c2"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".About">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/about_img_profile"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/daffa"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/img_contentDesc"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/about_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/developer"
        android:textSize="28sp"
        android:textColor="#f48b29"
        android:layout_below="@id/about_img_profile"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/about_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textSize="18sp"
        android:layout_below="@id/about_name"
        android:gravity="center_horizontal"/>

</RelativeLayout>